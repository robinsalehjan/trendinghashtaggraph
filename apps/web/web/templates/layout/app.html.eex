<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Graphs of worlwide trending hashtags
    and related tweets.">
    <meta name="author" content="Robin Saleh-Jan">
    <title> Graphs of worldwide trending hashtags | Created by Robin Saleh-Jan </title>

    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </head>

  <body>
    <div id="cy"> </div>
    <script>
      let App = require("web/static/js/app").App;
      App.run();

      let dialogAlert = function() {
        window.alert("\
        Zoom in - Scroll up \n\
        Zoom out - Scroll down\n\
        Move around - Click, hold and move your cursor \n\n\
        Press SPACE to see this menu again");
      }

      document.addEventListener("keypress", function(event) {
        if (event.keyCode == 0 || event.keyCode == 32) {
          dialogAlert();
        }
      });

      setTimeout(function () {
        dialogAlert();
      }, 1000);
    </script>
  </body>
</html>